FROM python:3.11-slim

WORKDIR /app

# 시스템 패키지 설치
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Python 의존성 설치
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 개발용: 소스 코드는 마운트로 처리 (COPY 제거)

# 워커 실행 (개발용)
CMD ["python", "worker.py"]
